<%= form_for(@answer) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Choose a question for your answer: " %><br />
    <%= select("answer","questions_id",@questions.collect { |d| [d.text,d.id] } ) %>
  </div>
  <div class="field">
    <%= f.label "Enter answer text:" %><br />
    <%= f.text_field :text %>
  </div>
  <div class="field">
    <%= f.label :answer_type %><br />
    <%= f.text_field :answer_type %>
  </div>
  <div class="field">
    <%= f.label :correct %><br />
    <%= select("answer", "correct", { "Yes" => "1" , "No" => "0"}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
