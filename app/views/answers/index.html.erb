<h1>Listing answers</h1>

<table>
  <tr>
    <th>Answer Text</th>
    <th>Type</th>
    <th>Right</th>
    <th>For Question</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.text %></td>
    <td><%= answer.answer_type %></td>
    <td><%= answer.correct %></td>
    <td><%= answer.questions_id %></td>
    <td><%= if permitted_to? :show, answer
		link_to 'Show', answer 
	end %>
	</td>
    <td><%= if permitted_to? :edit, answer
		link_to 'Edit', edit_answer_path(answer) 
	end %></td>
    <td><%= if permitted_to? :destroy, answer
		link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } 
	end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Answer', new_answer_path %>
