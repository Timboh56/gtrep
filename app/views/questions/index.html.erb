<h1>Listing questions</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Categories</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.text %></td>
    <td><%= question.categories %></td>
    <td><%= question.question_type %></td>
    <td><%= if permitted_to? :show, question
		link_to "Show", question, :action => :show
	end %></td>
    <td><%= if permitted_to? :edit, question 
		link_to "Edit", edit_question_path(question)
	end	%></td>
    <td><%= if permitted_to? :destroy, question 
		link_to "Destroy", question, :method => :delete , :confirm => "Are you sure?"
	end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Question', new_question_path %>
