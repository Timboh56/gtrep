<p id="notice"><%= notice %></p>

<p>
  <b>Question Group:</b>
  <%= @question_group.name %>
</p>

<p>
  <b>User:</b>
  <%= @question_group.user_id %>
</p>

<p>
  <b>Question groups type:</b>
  <%= @question_group.question_groups_type %>
</p>

<p>
	<b>Questions in this question group: </b>
	<%= unless @question_group_questions.nil? 
		@question_group_questions.each do |q| %>
		Question ID: <%= q.question_id.to_s %>
		<%= Question.find(q.question_id).text %>
		<br/ >
	<% end %>
	 <% end  %>
  </p>


