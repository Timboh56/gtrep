<%= form_for(@response) do |f| %>
  <% if @response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@response.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
      <% @response.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label "Choose an Question" %><br />
    <%= select("response", "question_id", @questions.collect { |d| [d.text,d.id] }) %>
  </div>

  <div class="field">
    <%= f.label "Choose an Answer" %><br />
    <%= select("response","answer_id", @answers.collect { |d| [d.text,d.id] }) %>
  </div>
  	
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
